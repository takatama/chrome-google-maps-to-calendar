{
  "manifest_version": 2,
  "name": "Maps to Calendar",
  "version": "0.1.0",
  "default_locale": "en",
  "description": "Add transit information on Google Maps easily to Google Calendar.",
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "48": "images/icon48.png"
    },
    "default_title": "Add to calendar"
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage"
  ], 
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://*.google.com/maps/*", "*://*.google.co.jp/maps/*"],
    "js": ["content.js"]
  }],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
